
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>{% block title %}Orange CI Admin Dashboard{% endblock %}</title>

    {% block stylesheets %}
        <link rel="shortcut icon" href="{{asset ('assets/img/favicon.svg')}}" type="image/x-icon">
        <link rel="preload" href="{{ asset ('assets/fonts/HelvNeue55_W1G.woff2')}}" as="font" type="font/woff2" crossorigin="anonymous">
        <link rel="preload" href="{{ asset ('assets/fonts/HelvNeue75_W1G.woff2')}}" as="font" type="font/woff2" crossorigin="anonymous">

        <link rel="stylesheet" href="{{ asset ('assets/css/orangeHelvetica.css')}}" >
        <link rel="stylesheet" href="{{ asset ('assets/css/orangeIcons.css')}}" >
        <link rel="stylesheet" href="{{ asset ('assets/css/style.css')}}" >
        <link rel="stylesheet" href="{{ asset ('assets/css/boosted.min.css')}}" >

    {% endblock %}
</head>

<body>
    <div id="auth"style="margin-top:10%">

        <div class="container">
            <div class="row">
                <div class="col-md-5 col-sm-12 mx-auto">
                    <div class="card pt-4">
                        <div class="card-body">
                            <div class="text-center" style="display: flex; justify-content: space-between; align-items: center;">
                                <img src="{{asset ('assets/img/orangemoney.svg')}}" height="70">
                                <img src="{{asset ('assets/img/favicon.svg')}}" height="50" class='mb-4'>
                            </div>

                            <div class="text-center"> 
                                <h3>Se connecter</h3> 
                            </div>
                            {% if app.session.get('flash') %}
                                {% for  message in app.flashes('error') %}
                                    <div class="text-center"style="color:red"> 
                                        <h5>{{message}}</h5> 
                                    </div>
                                {% endfor  %}
                            {% endif %}
                            <form autocomplete="off" action="{{path ('login')}}" method="POST">
                                <div class="form-group position-relative has-icon-left">
                                    <label for="username">Login</label>
                                    <div class="position-relative">
                                        <input type="text" class="form-control" name="username" required >
                                        <div class="form-control-icon">
                                            <i data-feather="user"></i>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group position-relative has-icon-left">
                                    <div class="clearfix">
                                        <label for="password">Mot de passe</label>
                                    </div>
                                    <div class="position-relative">
                                        <input type="password" class="form-control" id="password" name="password" required >
                                        <div class="form-control-icon">
                                            <i data-feather="lock"></i>
                                        </div>
                                    </div>
                                </div>
                                
                                <div class="text-center clearfix">
                                    <button class="btn btn-primary ">Connexion</button>
                                </div>
                            </form>
                        </div>
                    </div>

                </div>
            </div>
        </div>

    </div>
  </body>
</html>

</html>